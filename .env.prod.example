# Production Environment Variables Template for PazPaz
# Copy this file to .env.prod and fill in the actual values
# NEVER commit .env.prod to version control

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD
# Generate with: openssl rand -base64 32

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD
# Generate with: openssl rand -base64 32

# =============================================================================
# MinIO/S3 Configuration
# =============================================================================
S3_ACCESS_KEY=CHANGE_ME_GENERATE_ACCESS_KEY
# Generate with: openssl rand -base64 16 | tr -d '/+=' | cut -c1-16

S3_SECRET_KEY=CHANGE_ME_GENERATE_SECRET_KEY
# Generate with: openssl rand -base64 32 | tr -d '/+=' | cut -c1-32

S3_BUCKET_NAME=pazpaz-attachments
S3_REGION=us-east-1

MINIO_ENCRYPTION_KEY=CHANGE_ME_GENERATE_ENCRYPTION_KEY
# Generate with: python -c "import secrets,base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"

# =============================================================================
# Application Configuration
# =============================================================================
SECRET_KEY=CHANGE_ME_GENERATE_SECRET_KEY
# Generate with: openssl rand -hex 32

ENCRYPTION_MASTER_KEY=CHANGE_ME_GENERATE_ENCRYPTION_KEY
# Generate with: python -c "import secrets,base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"

FRONTEND_URL=https://app.pazpaz.com
ALLOWED_HOSTS=app.pazpaz.com,api.pazpaz.com
CORS_ALLOWED_ORIGINS=

# =============================================================================
# Email Configuration
# =============================================================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=CHANGE_ME_SENDGRID_API_KEY
SMTP_USE_TLS=true
EMAILS_FROM_EMAIL=noreply@pazpaz.com

# =============================================================================
# Deployment Configuration
# =============================================================================
VERSION=latest
ENVIRONMENT=production

# =============================================================================
# SSL Certificate Paths (Let's Encrypt)
# =============================================================================
SSL_CERT_PATH=/etc/letsencrypt/live/app.pazpaz.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/app.pazpaz.com/privkey.pem

# =============================================================================
# Monitoring and Logging
# =============================================================================
SENTRY_DSN=
LOG_LEVEL=INFO

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=pazpaz-backups
BACKUP_ENCRYPTION_KEY=CHANGE_ME_GENERATE_BACKUP_KEY